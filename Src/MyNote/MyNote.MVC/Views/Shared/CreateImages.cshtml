@model MyNote.MVC.Models.VM.CreateImages
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Zapisz zdjęcia</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="CreateImages" asp-controller="Notes" method="post" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Images" class="control-label">Zdjęcia</label>
                    <input asp-for="Images" class="form-control" type="file" multiple/>
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
        <input type="submit" value="Zapisz" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
