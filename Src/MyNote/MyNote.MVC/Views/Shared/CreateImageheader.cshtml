@using MyNote.MVC.Models.VM
@model MyNote.MVC.Models.VM.CreateFormFile


<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Zapisz zdjęcie główne</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="CreateImage" asp-controller="Notes" enctype="multipart/form-data" method="post">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Tytuł</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="File" class="control-label">Zdjęcie</label>
                    <input asp-for="File" class="form-control" type="file" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <div class="form-group">
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
        <input type="submit" value="Zapisz" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
