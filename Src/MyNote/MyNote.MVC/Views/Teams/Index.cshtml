@using System.Globalization

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Notatki zespołowe<small>top 5</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <article class="media event">
                    <a class="pull-left date">
                        <p class="month">@DateTime.Now.Date.ToString("MMM", CultureInfo.InvariantCulture)</p>
                        <p class="day">@DateTime.Now.Day</p>
                    </a>
                    <div class="media-body">
                        <a class="title" href="#">Ciekawy zespół</a>
                        <p>Stworzenie biblioteki do obslugi dat.</p>
                    </div>
                </article>
            </div>
        </div>
    </div>
</div>

